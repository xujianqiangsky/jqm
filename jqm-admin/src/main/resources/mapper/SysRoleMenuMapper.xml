<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="plus.jqm.admin.mapper.SysRoleMenuMapper">
    <resultMap id="selectPageMap" type="plus.jqm.api.domain.SysRoleMenu">
        <id property="id" column="id"/>
        <result property="roleId" column="role_id"/>
        <result property="menuId" column="menu_id"/>
        <result property="roleName" column="role_name"/>
        <result property="permission" column="permission"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>
    <sql id="selectPageSQL">
        rm.id,
        rm.role_id,
        r.name AS role_name,
        rm.menu_id,
        m.permission,
        rm.created_by,
        rm.created_time,
        rm.updated_by,
        rm.updated_time
    </sql>
    <select id="selectPage" resultMap="selectPageMap">
        SELECT
        <include refid="selectPageSQL"/>
        FROM
        sys_role r
        INNER JOIN sys_role_menu rm ON
        r.id = rm.role_id
        INNER JOIN sys_menu m ON
        m.id = rm.menu_id
    </select>
</mapper>